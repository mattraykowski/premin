<h1>Listing Course Sessions</h1>

<table class="table table-striped">
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Actions</th>
  </tr>

<% @course_sessions.each do |course_session| %>
  <tr>
    <td><%= course_session.name %></td>
    <td><%= course_session.status_description %></td>
    <td>
      <div class="btn-group">
        <%= link_to 'Show', course_course_session_path(@course,course_session), class: "btn btn-small btn-primary" %>
        <%= link_to 'Edit', edit_course_course_session_path(@course,course_session), class: "btn btn-small btn-warning" %>
        <%= link_to 'Destroy', course_course_session_path(@course,course_session), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-small btn-danger" %>
      </div>
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Course Session', new_course_course_session_path(@course), class: "btn btn-small btn-success" %>
