<% 
if !can_sign_up?
  flash[:alert] = "Sign up is not permitted."
else %>
  <h2>Sign up</h2>

    <%= devise_error_messages! %>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

    <fieldset>
      <legend>Your Information</legend>
      <label><%= f.label :name %></label>
      <%= f.text_field :name, placeholder: "Your name...", autofocus: true  %>
      <label><%= f.label :email %></label>
      <%= f.email_field :email, placeholder: "Email address..."  %>
      <label><%= f.label :password %></label>
      <%= f.password_field :password %>
      <label><%= f.label :password_confirmation %></label>
      <%= f.password_field :password_confirmation %>
    </fieldset>

    <% if current_account %>
      <%= f.hidden_field :account_subdomain, value: current_account.subdomain %>
      <%= f.hidden_field :account_id, value: current_account.id %>
    <% else %>
      <fieldset>
        <legend>School Information</legend>
        <label><%= f.label :account_subdomain</label>
        <%= f.text_field :account_subdomain %>
      </fieldset>
    <% end %>


    <div><%= f.submit "Sign up", class: "btn btn-primary" %></div>
  <% end %>

  <%= render "devise/shared/links" %>
<% end %>
