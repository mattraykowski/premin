<h1>Listing courses</h1>


<div class="row">
  <div class="col-lg-2">
    <ul class="nav nav-pills nav-stacked">
      <% @courses.each_with_index do |course, index| %>
        <li <%= 'class=active' if index == @course_index %>><a href="#course<%= index.to_s %>" data-toggle="pill"><%= course.name %></a></li>
      <% end %>
    </ul>
  </div>
  <div class="col-lg-10">
    <div class="pill-content">
      <% @courses.each_with_index do |course, index| %>
        <div id="course<%= index.to_s %>" class="pill-pane <%= 'active' if index == @course_index %>">
          <%= render partial: "single_content", locals: { course: course } %>
        </div>
      <% end %>
    </div>
  </div>
</div>
